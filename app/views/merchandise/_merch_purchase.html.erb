<div class="merch_container">
  <div class="merch_description">
    <p> <%= name %></p>
    <p>priced at only $ <%= formatted_balance(price) %></p>
  </div>
  <div class="merch_purchase_options">
    <%= render 'purchase_form', name: name, price: price %> 
    <%= link_to "Apply for Loan", pay_for_merch_path(merchandise: {name: name, price: price}, account_name: "loan") %>
  </div>
</div>